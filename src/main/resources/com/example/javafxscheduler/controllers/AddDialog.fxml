<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import jfxtras.scene.layout.VBox?>


<DialogPane maxWidth="800.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxscheduler.controllers.AddDialogController">
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CLOSE" />
   </buttonTypes>
   <content>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="What would you like to add?" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox minHeight="40.0" />
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <ChoiceBox fx:id="typeBox" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox minHeight="40.0" />
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Name:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <HBox minWidth="50.0" />
                  <TextField fx:id="elementName" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
